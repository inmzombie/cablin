{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.index.list'|trans({'%entity%': 'Cliente'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
<div class="row">
    <div class="span8">
        <h1>{{ 'views.index.list'|trans({'%entity%': 'Cliente'}, 'MWSimpleCrudGeneratorBundle') }}</h1>
    </div>
    <div class="span2">
        {% if filterForm.vars.errors|length > 0 %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="span2">
        <div class="filters-right">
            <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
                {{ 'views.index.filters'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
                <span class="caret"></span>
            </a>
        </div>
    </div>

    <div class="span12">
        <div id="filters" class="collapse">
            {{ form(filterForm) }}
        </div>
    </div>

    <div class="span12">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th{% if entities.isSorted('a.Id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Id', 'a.id') }}</th>
                    <th{% if entities.isSorted('a.Numerocliente') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Número Cliente', 'a.numeroCliente') }}</th>
                    <th{% if entities.isSorted('a.Nombreapellido') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Nombre Apellido', 'a.nombreApellido') }}</th>
                    <th{% if entities.isSorted('a.Documento') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Documento', 'a.documento') }}</th>
                    <th{% if entities.isSorted('a.Telefono') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(entities, 'Teléfono', 'a.telefono') }}</th>
                    <th>{{ 'views.index.actions'|trans({}, 'MWSimpleCrudGeneratorBundle') }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_cliente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.numeroCliente }}</td>
                    <td>{{ entity.nombreApellido }}</td>
                    <td>{{ entity.documento }}</td>
                    <td>{{ entity.telefono }}</td>
                    <td>
                        
        <a class="btn btn-mini" href="{{ path('admin_cliente_show', { 'id': entity.id }) }}">
            {{ 'views.actions.show'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('admin_cliente_edit', { 'id': entity.id }) }}">
            {{ 'views.actions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="span4 navigation">
        {{ knp_pagination_render(entities) }}
    </div>

        <div class="span8">
        <a class="btn btn-primary likepaginator" href="{{ path('admin_cliente_new') }}">
            {{ 'views.index.createnew'|trans({}, 'MWSimpleCrudGeneratorBundle') }} Cliente
        </a>
    </div>
    </div>
{% endblock %}
